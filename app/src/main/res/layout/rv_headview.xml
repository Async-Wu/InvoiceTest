<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@mipmap/drawer_bg">

    <RelativeLayout
        android:id="@+id/rl_drawer"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="24dp"
            android:id="@+id/tv_drawerHead_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="24dp"/>


        <LinearLayout
            android:id="@+id/ll_drawerHead"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_drawer_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_gravity="left"
                android:scaleType="centerCrop"
                fresco:placeholderImage="@mipmap/head"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:roundAsCircle="true"/>

            <TextView
                android:layout_marginLeft="24dp"
                android:id="@+id/tv_drawerHead_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="24dp"
                android:textColor="#fff"
                android:text="admin"/>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>